<Window x:Class="FontsViewer.InputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Input a sample text..." Height="68" MaxHeight="68" MinWidth="200" 
        WindowStyle="SingleBorderWindow" WindowStartupLocation="Manual" ShowInTaskbar="False" PreviewKeyDown="Window_PreviewKeyDown" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="samplet" Height="24" VerticalAlignment="Center" 
                 Margin="2" KeyDown="samplet_KeyDown" Loaded="samplet_Loaded" />
        <Button x:Name="okay" Grid.Column="1" Content="OK" Click="Button_Click" />
    </Grid>
</Window>
